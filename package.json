{
  "name": "adrgen",
  "version": "1.0.0",
  "description": "small CLI to generate files of archtecture decisions for record",
  "main": "./dist/index.js",
  "type": "commonjs",
  "author": "Matheus da Guia de Campos",
  "license": "MIT",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "node ./rm.cjs",
    "postbuild": "node ./copy-template.cjs",
    "prepublish": "npm run build",
    "start": "node ./dist/index.js",
    "dev": "tsx ./index.ts",
    "test": "vitest --run --passWithNoTests",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest --watch --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Teuuz1994/adrgen"
  },
  "bugs": {
    "url": "https://github.com/Teuuz1994/adrgen/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "adrgen",
    "adr",
    "generator",
    "gen",
    "archtecture",
    "decision",
    "records"
  ],
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@vitest/coverage-istanbul": "^0.32.0",
    "pkgroll": "^1.4.0",
    "tsx": "^3.12.1",
    "typescript": "^4.9.3",
    "vitest": "^0.32.0"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "commander": "^9.4.1"
  }
}
